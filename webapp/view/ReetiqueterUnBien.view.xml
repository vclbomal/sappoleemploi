<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.standard.newGestionDInventairePoleEmploi.controller.ReetiqueterUnBien" xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core">
    <m:Page showHeader="true" title="Réétiqueter un bien" showFooter="true" showNavButton="true" navButtonPress="_onPageNavButtonPress3">
        <m:content>
            <layout:BlockLayout>
                <layout:content>
                    <layout:BlockLayoutRow scrollable="false">
                        <layout:content>
                            <layout:BlockLayoutCell title="" titleAlignment="Begin" titleLevel="Auto" width="1">
                                <layout:content>
                                    <m:Image src="/webapp/resources/fond_noir.jpg" height="195px" width="260px" densityAware="false"/>
                                </layout:content>
                            </layout:BlockLayoutCell>
                            <layout:BlockLayoutCell title="" titleAlignment="Begin" titleLevel="Auto" width="1">
                                <layout:content>
                                    <m:Text text="Code barres :" width="109px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                                    <m:Input value="1234567889" type="Text" showValueHelp="false" enabled="true" visible="true" width="145px" valueHelpOnly="false" maxLength="0"/>
                                    <m:Text text="" width="10px" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                                </layout:content>
                            </layout:BlockLayoutCell>
                        </layout:content>
                    </layout:BlockLayoutRow>
                </layout:content>
            </layout:BlockLayout>
            <layout:BlockLayoutCell title="" titleAlignment="Center" titleLevel="Auto" width="1">
                <layout:content>
                    <m:Text text="Immobilisation :" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                    <m:Text text="Ordinateur" width="100px" maxLines="1" wrapping="false" textAlign="Center" textDirection="Inherit"/>
                    <core:Icon src="sap-icon://edit" size="30px" height="30px" width="30px" visible="true" press="_onIconPress2"/>
                </layout:content>
            </layout:BlockLayoutCell>
        </m:content>
        <m:footer>
            <m:Bar design="Auto">
                <m:contentLeft>
                    <m:Button text="Déclarer état" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress17"/>
                </m:contentLeft>
                <m:contentMiddle/>
                <m:contentRight>
                    <m:Button text="Confirmer le réétiquetage" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="_onButtonPress18"/>
                </m:contentRight>
            </m:Bar>
        </m:footer>
        <m:headerContent/>
        <m:subHeader/>
        <m:customHeader/>
    </m:Page>
</mvc:View>
